{
  "name": "simple-react-folder",
  "version": "0.0.3",
  "displayName": "Simple React Folder",
  "icon": "icon.jpg",
  "main": "./out/extension.js",
  "description": "Quickly create React component folders with TypeScript and CSS modules. Supports customizable style file extensions (.scss, .css, .less, .sass).",
  "publisher": "wangxiaohai",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "npm run compile && tsc -watch -p ./",
    "package": "vsce package",
    "publish": "npm version patch && vsce publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkk360/simple-react-folder"
  },
  "keywords": [
    "react",
    "typescript",
    "component",
    "scaffold",
    "scss",
    "css",
    "folder",
    "generator"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "contributes": {
    "configuration": {
      "title": "Simple React Folder",
      "properties": {
        "simpleReactFolder.styleFileExtension": {
          "type": "string",
          "default": ".scss",
          "description": "File extension for the style file (e.g., .scss, .css, .less)",
          "pattern": "^\\.(scss|css|less|sass)$"
        }
      }
    },
    "commands": [
      {
        "command": "simple-react-folder.create",
        "title": "New React Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "simple-react-folder.create",
          "group": "navigation"
        }
      ]
    }
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.0.0",
    "typescript": "^5.0.0"
  }
}
